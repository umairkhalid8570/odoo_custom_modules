<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="education_top_detail_nfc" name="Education Top Details"
              inherit_id="odoocms_admission_portal.education_top_detail">

        <!-- Matric -->
        <xpath expr="//div[@id='div_matric_total_marks']" position="before">
            <div class="section colm colm3" id="div_matric_roll_number">
                <label for="university">Roll Number</label>
                <label class="field prepend-icon">
                    <input min="1" type="number"
                           name="matricrollnumber" id="matricrollnumber"
                           placeholder="Roll Number" class="gui-input"
                           t-att-value="matric_education and matric_education[0].roll_number or ''"
                           required="true" t-att-readonly="readonly"/>
                    <span class="field-icon"><i class="fa fa-credit-card"/></span>
                </label>
            </div>
        </xpath>
        <xpath expr="//div[@id='div_matric_total_marks']" position="attributes">
            <attribute name="class">section colm colm3</attribute>
        </xpath>
        <xpath expr="//div[@id='div_matric_obtained_marks']" position="attributes">
            <attribute name="class">section colm colm3</attribute>
        </xpath>
        <xpath expr="//div[@id='div_matric_percentage']" position="attributes">
            <attribute name="class">section colm colm3</attribute>
        </xpath>

        <!-- Olevel -->
        <xpath expr="//div[@id='div_olevel_total_marks']" position="before">
